<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    tools:context="com.example.jefferyabbott.gorillawalk.GorillaWalk">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jungle"
        android:layout_centerInParent="true">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gorillaImageView"
            android:background="@drawable/gorilla0"
            android:layout_centerInParent="true"
            android:contentDescription="Gorilla Walking" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/walktext"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16px"
        android:text="walk"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speedtext"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="speed"
        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onOff"
        android:layout_above="@+id/walktext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/speedSlider"
        android:max="500"
        android:layout_alignBottom="@+id/onOff"
        android:layout_toEndOf="@+id/onOff"
        android:layout_toRightOf="@+id/onOff"
        android:layout_alignTop="@+id/onOff" />


</RelativeLayout>
